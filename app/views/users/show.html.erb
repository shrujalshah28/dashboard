<h2 align="center">Welcome to <%= @user.username %>'s page.</h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
    <div class="lable center user-body">
      Email: <%= @user.email %>
    </div>
    <div class="user-action">
      <% if logged_in? && current_user == @user %>
        <%= link_to "Edit user", edit_user_path(@user), class: "btn btn-md btn-primary" %>
        <%= link_to "Delete user", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this user?"}, class: "btn btn-md btn-danger" %>
      <% end %>
      <%= link_to "View all user", users_path, class: "btn btn-md btn-success" %>
    </div>
  </div>
</div>